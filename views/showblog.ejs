<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverimgURL %> " width="700px" />
      <p><%= blog.body %></p>
    </div>

    <div class="container mt-4 d-flex p-2">
      <img src=" <%= blog.createdBy.dp %> " width="40px" />
      <h3><%= blog.createdBy.name %></h3>
    </div>

    <div class="container mt-4">
     <h3>Comments</h3>
      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
          <div class="form-floating">
            <textarea
              class="form-control"
              placeholder="Leave your thoughts here..."
              id="comment"
              name="comment"
              style="height: 100px"
            ></textarea>
            <label for="comment">Enter your Comment</label>
          </div>
          <button class="btn btn-primary mt-3 mb-3">Comment</button>
        </form>
      <% } %>
    </div>


    <%- include('./partials/script') %>
  </body>
</html>
